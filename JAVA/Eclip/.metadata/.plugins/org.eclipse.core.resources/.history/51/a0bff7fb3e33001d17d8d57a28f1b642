package codeLearnNapChong;
import java.util.Scanner ;
 class newArr{
	 static int a = 8 ;
	public static int ArrSum(int []Arr)
	{
		int sum = 0 ;
		for(int i = 0 ;i<Arr.length ;i++)
		{
			sum+=Arr[i];
		}
		return sum ;
	}
	public static double Arrsum( double []Arr2)
	{
		int sum = 0 ;
		for(int i = 0 ;i<Arr2.length;i++)
		{
			sum+=Arr2[i];
		}
		return sum ;
	}
}
public class ArrayCalculator {
	public static void main(String[] args)
	{
		 int [] Arr = new int [] {3,4,2} ;
	     double [] Arr2 = new double [] {3.5 ,6.7 ,8.9 } ;
	     System.out.println(newArr.ArrSum(Arr));
	     System.out.println(newArr.Arrsum(Arr2));
	     System.out.println(newArr.a);
	}
     
    
}
